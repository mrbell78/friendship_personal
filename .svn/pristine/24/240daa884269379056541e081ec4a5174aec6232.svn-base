<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe1ff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a6a8bf"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/img_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:text="@string/dialog_title"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:padding="5dip" >

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dip" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date_of_birth"
                    android:textSize="20sp" />

                <DatePicker
                    android:id="@+id/dateInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:textSize="20sp" />
                   <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="20sp" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                 android:background="#a6a8bf"
                 />
            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sex"
                    android:textSize="20sp" />

                <RadioGroup
                      android:id="@+id/rdo_group_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rdo_male"
                          android:checked="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/male" />

                    <RadioButton
                        android:id="@+id/rdo_female"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/female" />

                    <RadioButton
                        android:id="@+id/rdo_other"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/others" />
                </RadioGroup>
            </LinearLayout>
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                 android:background="#a6a8bf"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/marital_status"
                    android:textSize="20sp" />
           <RadioGroup
                    android:id="@+id/rdo_group_marital_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical" >
                    <RadioButton
                        android:id="@+id/rdo_single"
                        android:checked="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/single" />
                    <RadioButton
                        android:id="@+id/rdo_married"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/married" />
                    <RadioButton
                        android:id="@+id/rdo_divorced"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/divorced" />
                    <RadioButton
                        android:id="@+id/rdo_widowed"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/widowed" />
                </RadioGroup> 
              
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:padding="5dip" >

        <Button
            android:id="@+id/btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_close"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>