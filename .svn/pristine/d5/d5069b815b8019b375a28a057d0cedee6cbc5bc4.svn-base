<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product_management.InvoiceListActivity">

    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/eventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:text="Adjustment : 15466336666664 (....)"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:text="Date &amp; Time : 15-Dec-22,  3:35 PM"
            android:textSize="18dp"
            android:textStyle="italic" />
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:background="#858585" />

        <TextView
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:text="Total: 2 Items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#FFFFFF"
                android:paddingRight="10dp"

                android:text="Adjustment ID"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/beneficiary_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_rounded_corner_white"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/beneficiarySpinner"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/layoutHeading"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:stretchColumns="0,1,2,3">

                <TableRow
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="32dp"

                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="8dp"
                        android:text="Prodcuts"
                        android:textSize="18dp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="italic" />

                    <TextView
                        android:paddingRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Qantity"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="italic" />

                </TableRow>


                <TableRow
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"

                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="8dp"
                        android:text="Paracetamol 500m..."
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="30"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="normal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="400"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="normal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="#DFDFDF"
                        android:paddingLeft="16dp"
                        android:text="x"
                        android:textAlignment="textStart"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                </TableRow>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:background="#D5D5D5" />
                <TableRow
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="32dp"

                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="8dp"
                        android:text="Imotil 500 mg"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="5"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="400"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="normal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="#DFDFDF"
                            android:paddingLeft="16dp"
                        android:text="x"
                        android:textAlignment="textStart"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                </TableRow>


                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:background="#D5D5D5" />
                <TableRow
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="32dp"

                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="8dp"
                        android:text="Total:"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="35"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="35"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="normal" />


                </TableRow>
                <TableRow
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="32dp"

                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="8dp"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Note:"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="italic" />


                </TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Please adjust these medicines"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="30dp"
                        android:textSize="12dp"
                        android:textStyle="italic" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#DCDBDB"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/btnSale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="Comments from Store: \nNo problem your request has been approved."
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_600"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/app_color"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/ok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Ok"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            </TableLayout>


        </LinearLayout>

        <TableLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:stretchColumns="0,1,2">





        </TableLayout>



    </LinearLayout>






</RelativeLayout>
</layout>