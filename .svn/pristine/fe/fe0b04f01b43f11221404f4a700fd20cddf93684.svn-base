<resources>

    <style name="SelectableItemBackground">
        <item name="android:colorControlHighlight">#5677FC</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="Transparent" parent="Theme.SatelliteCare.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="spinner_style" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#BF2323</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="CustomFloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <!-- Customize the properties of the FloatingActionButton here -->
        <item name="android:backgroundTint">@color/gray</item>
        <!-- Add any other desired properties -->
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <!-- Customize the background color -->
        <item name="android:background">@color/white</item>

<!--        &lt;!&ndash; Customize the icon tint color &ndash;&gt;-->
<!--        <item name="itemIconTint">@color/black</item>-->

<!--        &lt;!&ndash; Customize the text label color &ndash;&gt;-->
<!--        <item name="itemTextColor">@color/black</item>-->
    </style>
</resources>