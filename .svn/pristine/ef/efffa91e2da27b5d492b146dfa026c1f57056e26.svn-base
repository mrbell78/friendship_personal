<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:padding="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_req_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="12563478859654"
                android:textStyle="bold"
                android:textColor="@color/ase"
                android:textSize="@dimen/fontsize_small" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="06-05-2014"
                android:textStyle="italic"
                android:textColor="@color/dark_light"
                android:textSize="@dimen/fontsize_small" />
        </LinearLayout>

        <LinearLayout


            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_requisition_request_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Initiate"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="@color/md_indigo_500"
                android:textSize="@dimen/fontsize_small" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_requisition_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="1254.00"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_receive_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="9875.00"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dash_line" />




</LinearLayout>