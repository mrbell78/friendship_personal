<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#FAFAFA"
            android:orientation="vertical">
            <TextView
                android:visibility="gone"
                android:paddingRight="8dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:text="X"
                android:layout_height="wrap_content"></TextView>


            <LinearLayout
                android:id="@+id/list_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="4dp">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="Tab:"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:paddingLeft="20dp"
                        android:paddingTop="2dp"
                        android:text="@string/saline_orsaline_10_5mg"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/medicine_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35dp"
                        android:background="@drawable/ic_bookmark"
                        android:paddingTop="3dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_info_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAlignment="textStart"

                        android:paddingLeft="20dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!--                    <TextView-->
                        <!--                        android:layout_width="24dp"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:gravity="center"-->
                        <!--                        android:text="৳"-->
                        <!--                        android:textColor="@color/black"-->
                        <!--                        android:textSize="18dp"-->
                        <!--                        android:textStyle="normal" />-->

                        <TextView
                            android:id="@+id/tv_info_left"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:paddingRight="20dp"
                            android:text="mPrice"
                            android:visibility="invisible"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="normal" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/last_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/decrease"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="26dp"
                        app:cardElevation="1dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="-"
                            android:textColor="@color/ase"
                            android:textSize="16dp" />

                    </androidx.cardview.widget.CardView>

                    <EditText
                        android:id="@+id/et_quantity"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/border_rounded_corner_white"
                        android:editable="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/increase"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="26dp"
                        app:cardElevation="1dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="+"
                            android:textColor="@color/ase"
                            android:textSize="16dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/increaseBlue"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/app_color"
                        app:cardCornerRadius="26dp"
                        app:cardElevation="1dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:paddingRight="8dp">

                        <!--                    <TextView-->
                        <!--                        android:layout_width="wrap_content"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:layout_gravity="center"-->
                        <!--                        android:gravity="end"-->
                        <!--                        android:text="৳ "-->
                        <!--                        android:textSize="18dp" />-->

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="-"
                            android:textSize="18dp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#C1C0C0" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>
