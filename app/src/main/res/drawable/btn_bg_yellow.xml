<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <gradient 
                android:startColor="@color/yellow_dark"
                android:endColor="@color/yellow_dark"
                android:angle="270"/>
            <stroke 
                android:width="2dp"
                android:color="@color/yellow_dark"/>
            <corners
               android:radius="2dp" />
            <padding
               android:left="0dp"
               android:top="0dp"
               android:right="0dp"
               android:bottom="0dp" />
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient 
                android:startColor="@color/yellow"
                android:endColor="@color/yellow"
                android:angle="270"/>
            <stroke 
                android:width="0dp"
                android:color="#000000"/>
            <corners
               android:radius="2dp" />
            <padding
               android:left="0dp"
               android:top="0dp"
               android:right="0dp"
               android:bottom="0dp" />
        </shape>
    </item>

</selector>
