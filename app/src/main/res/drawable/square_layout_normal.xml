<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- shadow color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CAC5CAE9"/>
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- background color -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/app_color_light"/>
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>